<configuration scan="true" scanPeriod="5 seconds">
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%date{ISO8601} %-5level %logger{36} - %msg %mdc%n</pattern>
        </encoder>
    </appender>

    <logger name="com.zaxxer.hikari" level="warn"/>
    <!-- Reduce Quartz scheduler logging verbosity -->
    <logger name="org.quartz.plugins.history.LoggingTriggerHistoryPlugin" level="warn"/>
    <logger name="org.quartz.plugins.history.LoggingJobHistoryPlugin" level="warn"/>
    <logger name="org.quartz" level="warn"/>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
