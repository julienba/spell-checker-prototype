{:paths ["src/clj" "src/cljc" "resources"]

 :deps {org.clojure/clojure {:mvn/version "1.12.3"}
        ; HTTP
        ;metosin/reitit-ring {:mvn/version "0.9.2"}
        metosin/reitit {:mvn/version "0.9.2"}
        ring/ring-core {:mvn/version "1.15.3"}
        ring/ring-jetty-adapter {:mvn/version "1.15.3"}
        ring-cors/ring-cors {:mvn/version "0.1.13"}
        metosin/muuntaja {:mvn/version "0.6.11"}
        ; logging
        org.clojure/tools.logging {:mvn/version "1.3.0"}
        ch.qos.logback/logback-classic {:mvn/version "1.5.21"}
        ; LLM integration
        ; My little library. For now, it parse `.prompt` file and document the paramameter/response from each LLM provider
        com.github.julienba/clj-sac {:git/sha "a098499ebc2940222992103bf18d4194f8065001"}}

 :aliases {:dev {:extra-paths ["dev"]
                 :extra-deps {nrepl/nrepl {:mvn/version "1.5.1"}
                              cider/cider-nrepl {:mvn/version "0.58.0"}
                              djblue/portal {:mvn/version "0.62.0"}}}
           :outdated {:extra-deps {com.github.liquidz/antq {:mvn/version "2.11.1276"}}
                      :main-opts ["-m" "antq.core" "--no-diff"]}
           :test {:extra-paths ["test" "test/resources"]
                  :extra-deps {eftest/eftest {:mvn/version "0.6.0"}
                               cloverage/cloverage {:mvn/version "1.2.4"}
                               clj-http/clj-http {:mvn/version "3.13.1"}
                               circleci/bond {:mvn/version "0.6.0"}}
                  :exec-fn cloverage.coverage/run-project
                  :exec-args {:test-ns-path ["test"]
                              :src-ns-path ["src"]
                              :runner :eftest
                              :runner-opts {:multithread? false}}}}}

